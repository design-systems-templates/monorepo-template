{
  "name": "@{{kebab}}/monorepo",
  "private": true,
  "repository": "{{repoUrl}}",
  "author": "{{authorName}} {{authorEmail}}",
  "contributors": [
    "{{authorName}} {{authorEmail}}"
  ],
  "resolutions": {
    "postcss-markdown": "https://github.com/gucong3000/postcss-markdown"
  },
  "license": "MIT",
  "scripts": {
    "create": "ds create package --template js",
    "clean": "ds clean",
    "start": "lerna run start --parallel",
    "lint": "ds lint",
    "test": "ds test",
    "build": "lerna run build --stream",
    "size": "ds size"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "auto": "9.0.2",
    "@design-systems/cli": "{{cliVersion}}",
    "husky": "3.1.0",
    "prettier": "1.19.1",
    "lerna": "3.20.2",
    "lint-staged": "9.5.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./coverage/target/surefire-reports"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
